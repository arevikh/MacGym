@model IndexModel
@{
    ViewBag.Title = "Home";
}
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTab').tab();

            $('#myTab a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            })
        });
    </script>
}

<h2>Home</h2>

<div class="row">
    <div class="span9">
         
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#body">BODY</a></li>
            <li><a href="#tools">TOOLS</a></li>
        </ul>
 
        <div class="tab-content">
            <div class="tab-pane active" id="body">
                <ul>
                    @foreach (var item in Model.BodyParts)
                    {
                        <li>@(Html.ActionLink(item.name, "List", new { bodyPart = item.bodyPartID }))</li>
                    }
                </ul>
                <img src="~/images/body.png" usemap="#planetmap">


                <map name="planetmap">
                    <area shape="rect" coords="115,40,145,70" href="aaaaaaaa.htm" title="Neck" alt="Neck">
                    <area shape="rect" coords="80,80,175,65" href="aaaaaaaa.htm" title="Back" alt="Back">
                    <area shape="rect" coords="0,230,85,85" href="aaaaaaaa.htm" title="Arm" alt="Arm">
                    <area shape="rect" coords="250,230,175,85" href="aaaaaaaa.htm" title="Arm" alt="Arm">
                    <area shape="rect" coords="160,180,95,120" href="aaaaaaaa.htm" title="Belly" alt="Belly">
                    <area shape="rect" coords="170,180,85,290" href="aaaaaaaa.htm" title="Thigh" alt="Thigh">

                    
                </map> 


            </div>
            <div class="tab-pane" id="tools">
                <ul>
                    @foreach (var item in Model.Tools)
                    {
                        <li>@(Html.ActionLink(item.name, "List", new { tool = item.toolID }))</li>
                    }
                </ul>
            </div>
        </div>

    </div>
    @if(Model.LastViewed.Count > 0)
    {
        <div class="span3">
            <h4>Last @(Model.LastViewed.Count) viewed</h4>
            <ul>
                @foreach (var item in Model.LastViewed)
                {
                    <li>@Html.ActionLink(item.name, "Details", new { id = item.workoutID })</li>    
                }
            </ul>
        </div>
    }
</div>
