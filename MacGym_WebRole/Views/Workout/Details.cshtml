@model WorkoutModel
@{
    ViewBag.Title = "Details";
}
@section scripts
{
    @Scripts.Render("~/lightbox")
}
<h2>@Model.Name</h2>

<hr>

@if(Model.HasImage)
{
    <h4 class="detail-title">Photos</h4>
    <div class="row">
        @foreach (var item in Model.Images)
        {
            <div class="span2 gallery-img">
                <a href="~/Content/Images/Workouts/@(item)" rel="lightbox[plants]"><img src="~/Content/Images/Workouts/@(item)" class="thumb"></a>
            </div>
        }
    </div>
}

@if(Model.HasVideo)
{
    <h4 class="detail-title">Videos</h4>
    <div class="row">
        <div class="span2">
            <iframe width="300" height="225" src="http://www.youtube.com/embed/QtYgmDEddug" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>
}

@if(Model.HasAudio)
{
    <h4 class="detail-title">Audio Recordings</h4>
    <div class="row">
        <div class="span2">
            Not available
        </div>
    </div>
}

<h4 class="detail-title">Description</h4>
<div class="row">
    <div class="span12">
        @Model.Description
    </div>
</div>

<div class="row">
    <div class="span6">
        <h4 class="detail-title">Tools</h4>
        @foreach (var item in Model.Tools)
        {
            <p>@(Html.ActionLink(item.name, "List", new { tool = item.toolID }))</p>
        }
    </div>
    <div class="span6">
        <h4 class="detail-title">Parts of Body</h4>
        @foreach (var item in Model.BodyParts)
        {
            <p>@(Html.ActionLink(item.name, "List", new { bodyPart = item.bodyPartID }))</p>
        }        
    </div>
</div>